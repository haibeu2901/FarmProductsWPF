<Window x:Class="FarmProductsWPF.FarmProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Farm Products Management System" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Add these colors to your Window.Resources -->
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="40,12,12,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <TextBlock Text="🔍" 
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="#9CA3AF"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Pill Style -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Replace your current LogoutButton style with this one -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#7C3AED" CornerRadius="12" Width="48" Height="48">
                    <TextBlock Text="⚙️" 
                             FontSize="24" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>
                <StackPanel Margin="16,8,16,8">
                    <TextBlock Text="Farm Products Management System"
                             FontSize="20"
                             FontWeight="Bold"
                             Foreground="#111827"
                             />
                </StackPanel>
            </StackPanel>

            <!-- User Info and Logout -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,16,0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" 
                             FontSize="16" 
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" 
                             FontWeight="Medium"
                             FontSize="14"
                             Foreground="#1F2937" 
                             VerticalAlignment="Center"/>
                </StackPanel>
                <!-- Replace your current logout button with this one -->
                <Button x:Name="btnLogout" 
                        Style="{StaticResource LogoutButtonStyle}" 
                        Click="btnLogout_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛫 Logout" Padding="5"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Navigation -->
        <!-- Navigation -->
        <Border Grid.Row="1" 
                Background="White"
                Margin="24,0,24,16"
                Height="64">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="📦 View Stock" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="🛒 Create Order" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="👥 Accounts" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="3" Content="🏷️ Categories" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="4" Content="🌾 Products" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="5" Content="📋 Stock Management" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Stock Inventory"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="#111827"/>
                    <TextBlock Text="View current stock levels"
                             FontSize="14"
                             Foreground="#6B7280"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <TextBox Grid.Column="1" 
                         Style="{StaticResource SearchBox}"
                         Text="Search products..."/>
            </Grid>

            <!-- Data Grid -->
            <DataGrid Grid.Row="2" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="White"
                      BorderThickness="1"
                      BorderBrush="#E5E7EB"
                      RowHeaderWidth="0"
                      ColumnHeaderHeight="48"
                      RowHeight="48"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F3F4F6">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Width="100"/>
                    <DataGridTextColumn Header="Product Name" Width="2*"/>
                    <DataGridTextColumn Header="Category" Width="1.5*"/>
                    <DataGridTextColumn Header="Unit" Width="100"/>
                    <DataGridTextColumn Header="Price" Width="120"/>
                    <DataGridTextColumn Header="Stock Level" Width="120"/>
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource StatusPill}"
                                        Background="#DCFCE7">
                                    <TextBlock Text="In Stock"
                                             Foreground="#15803D"
                                             FontWeight="SemiBold"
                                             HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>