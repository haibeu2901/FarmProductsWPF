<Window x:Class="FarmProductsWPF.OrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Order History - Farm Products Management System"
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="LightGreen" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="ProcessingOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ShippedBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BackgroundWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SearchBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SearchBlueHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>
        <SolidColorBrush x:Key="StatusGreen" Color="#10B981"/>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Box Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <TextBlock Text="🔍" 
                                           FontSize="16"
                                           Margin="15,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="#9CA3AF"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="40,0,15,0"
                                              VerticalAlignment="Center"/>
                                <TextBlock Text="Search orders, customers, staff" 
                                           Foreground="#9CA3AF" 
                                           Margin="40,0,0,0"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Order Item Style for ListBox -->
        <Style x:Key="OrderItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{StaticResource BackgroundWhite}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <ContentPresenter Margin="20"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource LightGreen}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource LightGreen}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SearchBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SearchBlueHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Grid.ColumnSpan="2">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="📅" 
                                                               FontSize="16"
                                                               Margin="15,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="#9CA3AF"/>
                                                    <Path Grid.Column="1"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Fill="#9CA3AF"
                                                          Margin="0,0,15,0"
                                                          VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="40,0,30,0"
                                                  VerticalAlignment="Center"/>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="White"
                                            BorderBrush="{StaticResource BorderGray}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            MinWidth="{TemplateBinding ActualWidth}"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Pill Style -->
        <Style x:Key="CategoryPillStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundWhite}"
                BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#7C3AED" CornerRadius="12" Width="48" Height="48">
                        <TextBlock Text="⚙️" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="16,8,16,8">
                        <TextBlock Text="Farm Products Management System"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#111827"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="16" Margin="0,0,5,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" FontWeight="Medium"
                               Foreground="#1F2937" VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <!-- Logout button -->
                    <Button x:Name="btnLogout" Style="{StaticResource LogoutButtonStyle}" 
                            Click="btnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛫 Logout" Padding="5"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundWhite}"
                BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnViewStockWindow" Grid.Column="0" Content="📦 View Stock" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="btnViewStockWindow_Click" />
                <Button x:Name="btnCreateOrderWindow" Grid.Column="1" Content="🛒 Create Order" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Click="btnCreateOrderWindow_Click" />
                <Button Grid.Column="2" Content="📅 Order History" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Background="#F3F4F6" Foreground="#4F46E5"/>
                <Button x:Name="btnAccountsWindow" Grid.Column="3" Content="👥 Accounts" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnAccountsWindow_Click"/>
                <Button x:Name="btnCategoriesWindow" Grid.Column="4" Content="🏷️ Categories" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnCategoriesWindow_Click"/>
                <Button x:Name="btnProductsWindow" Grid.Column="5" Content="🌾 Products" 
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnProductsWindow_Click"/>
                <Button x:Name="btnStockManagementWindow" Grid.Column="6" Content="🏬 Stock Management"
                        Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnStockManagementWindow_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Order History List -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Order History" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#1F2937"
                               VerticalAlignment="Center"/>

                    <Border 
                            Background="#F9FAFB" 
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="12" Grid.ColumnSpan="2" Margin="243,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" 
                                       FontSize="16" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"
                                       Foreground="#9CA3AF"/>
                            <TextBox x:Name="txtSearch" 
                                     Grid.Column="1" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextGray}"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Height="28" Width="254">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="{TemplateBinding Background}"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 VerticalContentAlignment="Center"
                                                                 BorderThickness="0"/>
                                                        <TextBlock Text="Search orders..." 
                                                                   Foreground="#9CA3AF" 
                                                                   IsHitTestVisible="False"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center" Width="254">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="btnSearch" 
                                    Grid.Column="2" 
                                    Margin="8,0,0,0"
                                    Style="{StaticResource SearchButtonStyle}" 
                                    Click="btnSearch_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍 Search" 
                                               FontSize="14" 
                                               Padding="5"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Filter Section -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbDateFilter" 
                              Grid.Column="0"
                              Style="{StaticResource FilterComboBoxStyle}"
                              SelectedIndex="0"
                              Margin="0,0,20,0">
                        <ComboBoxItem Content="All Orders"/>
                        <ComboBoxItem Content="Today"/>
                        <ComboBoxItem Content="This Week"/>
                        <ComboBoxItem Content="This Month"/>
                    </ComboBox>

                    <Button x:Name="btnFilter" 
                            Grid.Column="1"
                            Style="{StaticResource SearchButtonStyle}"
                            Click="btnFilter_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅 Filter" 
                                       FontSize="14"
                                       Padding="5" 
                                       Width="80"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <ListBox Grid.Row="2" 
                         d:ItemsSource="{d:SampleData ItemCount=5}"
                         x:Name="lstOrders"
                         BorderThickness="0"
                         Background="Transparent"
                         ItemContainerStyle="{StaticResource OrderItemStyle}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto" 
                         Loaded="lstOrders_Loaded" 
                         SelectionChanged="lstOrders_SelectionChanged">
                    <ListBox.Template>
                        <ControlTemplate TargetType="ListBox">
                            <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    Background="{TemplateBinding Background}">
                                <ScrollViewer x:Name="ScrollViewer" 
                                              Padding="{TemplateBinding Padding}"
                                              CanContentScroll="False"
                                              PanningMode="VerticalOnly"
                                              PanningRatio="0.001"
                                              PanningDeceleration="0.000001">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </ListBox.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Order ID and Status -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding OrderId, StringFormat='Order #{0}'}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#1F2937"/>

                                    <Border Grid.Column="1"
                                            Style="{StaticResource StatusBadgeStyle}">
                                        <TextBlock Text="✔ Completed"
                                                   Foreground="{StaticResource StatusGreen}"
                                                   FontSize="12"
                                                   FontWeight="Medium"/>
                                    </Border>
                                </Grid>

                                <!-- Date -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="🗓️"
                                               FontSize="14"
                                               Margin="0,0,5,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding OrderDate, StringFormat='{}{0:MMM dd, yyyy, hh:mm tt}'}"
                                               Foreground="{StaticResource TextGray}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Customer and Staff -->
                                <Grid Grid.Row="2" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding CustomerName, StringFormat='Customer: {0}'}"
                                                   Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="{Binding CustomerPhoneNumber}"
                                                   Foreground="{StaticResource TextGray}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryGreen}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Items List Preview -->
                                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                    <TextBlock Text="{Binding OrderDetailsCount, StringFormat='{}{0} items'}"
                                               Foreground="{StaticResource TextGray}"
                                               FontSize="13"
                                               Margin="0,0,0,4"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Right Side - Order Details -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Order Details"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,15"/>

                <!-- Order Number -->
                <TextBlock Grid.Row="1"
                           x:Name="txtSelectedOrderId"
                           Text="Order #10101010"
                           FontSize="16"
                           FontWeight="Medium"
                           Margin="0,0,0,15"/>

                <!-- Order Information -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Status:"
                               FontWeight="Medium"
                               Foreground="#1F2937"
                               Margin="0,0,0,10"
                               VerticalAlignment="Center"/>

                    <!-- Replace the TextBlock with a Border that contains a TextBlock -->
                    <Border Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource CategoryPillStyle}">
                        <TextBlock x:Name="txtSelectedOrderStatus"
                                   Text="✔ Completed"
                                   Foreground="{StaticResource StatusGreen}"
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   FontWeight="Medium"/>
                    </Border>

                    <!-- Order Date -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Order Date:"
                               FontWeight="Medium"
                               Foreground="#1F2937"
                               Margin="0,0,0,10"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="1"
                               x:Name="txtSelectedOrderDate"
                               Text=""
                               Foreground="{StaticResource TextGray}"
                               VerticalAlignment="Center"/>

                    <!-- Customer -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Customer:"
                               FontWeight="Medium"
                               Foreground="#1F2937"
                               Margin="0,0,0,10"
                               VerticalAlignment="Top"/>

                    <StackPanel Grid.Row="2" Grid.Column="1" 
                                HorizontalAlignment="Left">
                        <TextBlock x:Name="txtSelectedCustomerName"
                                   Text=""
                                   Foreground="{StaticResource TextGray}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtSelectedCustomerPhone"
                                   Text=""
                                   Foreground="{StaticResource TextGray}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Processed By -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Processed by:"
                               FontWeight="Medium"
                               Foreground="#1F2937"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="3" Grid.Column="1"
                               x:Name="txtSelectedStaffName"
                               Text=""
                               Foreground="{StaticResource TextGray}"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Items Ordered -->
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Items Ordered"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1F2937"
                               Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1"
                             d:ItemsSource="{d:SampleData ItemCount=5}"
                             x:Name="lstOrderItems"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionMode="Single"
                             IsHitTestVisible="True"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        Background="{TemplateBinding Background}">
                                    <ScrollViewer x:Name="ScrollViewer" 
                                                  Padding="{TemplateBinding Padding}"
                                                  CanContentScroll="False"
                                                  PanningMode="VerticalOnly"
                                                  PanningRatio="0.001"
                                                  PanningDeceleration="0.000001">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>
                        <!-- Only set ItemContainerStyle once -->
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource OrderItemStyle}">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="IsEnabled" Value="True"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Product Name and Price -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DetailProductName}"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Foreground="#1F2937"/>

                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                               Text="{Binding DetailTotalPrice, StringFormat='{}{0:N0} đ'}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#1F2937"/>

                                    <!-- Category, Quantity and Unit Price on same line -->
                                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Category Badge -->
                                        <Border Grid.Column="0"
                                                Style="{StaticResource CategoryPillStyle}"
                                                Background="#E8F5E9"
                                                BorderBrush="#81C784"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                Padding="8,4"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="{Binding CategoryName}"
                                                       Foreground="#2E7D32"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Quantity and Unit Price - now aligned with category -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DetailQuantity}"
                                                       Foreground="{StaticResource TextGray}"/>
                                            <TextBlock Text="{Binding DetailProductUnit}"
                                                       Foreground="{StaticResource TextGray}"
                                                       Margin="3,0,0,0"/>
                                            <TextBlock Text=" × "
                                                       Foreground="{StaticResource TextGray}"
                                                       Margin="3,0,3,0"/>
                                            <TextBlock Text="{Binding DetailSellingPrice, StringFormat='{}{0:N0} đ'}"
                                                       Foreground="{StaticResource TextGray}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!-- Total Amount -->
                <Border Grid.Row="4"
                        Background="{StaticResource LightGreen}"
                        BorderBrush="{StaticResource PrimaryGreen}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Total Amount:"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#1F2937"/>

                        <TextBlock Grid.Column="1"
                                   x:Name="txtSelectedTotalAmount"
                                   Text=""
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryGreen}"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>