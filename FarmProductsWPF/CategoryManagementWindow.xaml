<Window x:Class="FarmProductsWPF.CategoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Farm Products Management System" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">
    <Window.Resources>
        <!-- Add these colors to your Window.Resources -->
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- In Window.Resources, update the SearchBox style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="40,0,12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8"
                Height="{TemplateBinding Height}">
                            <Grid>
                                <TextBlock Text="🔍" 
                         Margin="12,0,0,0"
                         VerticalAlignment="Center"
                         Foreground="#9CA3AF"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                            Margin="{TemplateBinding Padding}"
                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Pill Style -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Replace your current LogoutButton style with this one -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Update the ModernDataGrid style to include smooth scrolling -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
            <Setter Property="ScrollViewer.PanningRatio" Value="0.001"/>
            <Setter Property="ScrollViewer.PanningDeceleration" Value="0.000001"/>
            <Style.Resources>
                <!-- Define cell style that preserves text color -->
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <!-- Keep the foreground color of the cell content -->
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Remove focus visual styles -->
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <!-- Keep the foreground color -->
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Add smooth scrolling for the ScrollViewer -->
                <Style TargetType="{x:Type ScrollViewer}">
                    <Setter Property="CanContentScroll" Value="False"/>
                    <Setter Property="PanningMode" Value="VerticalOnly"/>
                    <Setter Property="PanningRatio" Value="1"/>
                    <Setter Property="PanningDeceleration" Value="0.003"/>
                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                </Style>
            </Style.Resources>
        </Style>

        <!-- Category Pill Style -->
        <Style x:Key="CategoryPillStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Add to Window.Resources -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#5a6268"/>

        </Style>

        <!-- Add this style to Window.Resources section for action buttons -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#E5F5FF"/>
            <Setter Property="BorderBrush" Value="#007BFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#007BFF"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CCE5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Update the UpdateStockButton style with larger dimensions and increased text padding -->
        <Style x:Key="UpdateStockButton" TargetType="Button">
            <Setter Property="Foreground" Value="#0066CC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Background Border -->
                            <Border x:Name="BackgroundBorder"
                                Background="#E5F5FF"
                                BorderBrush="#4DA9FF"
                                BorderThickness="1"
                                CornerRadius="18"
                                Opacity="0.8"
                                Padding="{TemplateBinding Padding}"/>

                            <!-- Content Presenter on Top -->
                            <ContentPresenter x:Name="ButtonContent" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"
                                         Panel.ZIndex="1"
                                         Margin="10"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#4DA9FF"/>
                                <Setter TargetName="BackgroundBorder" Property="BorderBrush" Value="#0056B3"/>
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="ButtonContent" Property="TextElement.FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BackgroundBorder" Property="Background" Value="#0066CC"/>
                                <Setter TargetName="BackgroundBorder" Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Update DataGrid column header style for a cleaner look -->
        <Style x:Key="CleanDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Update the DataGridColumnHeader style in Window.Resources -->
        <Style x:Key="EvenlySpacedColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#5a6268"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#7C3AED" CornerRadius="12" Width="48" Height="48">
                    <TextBlock Text="⚙️" 
                         FontSize="24" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
                </Border>
                <StackPanel Margin="16,8,16,8">
                    <TextBlock Text="Farm Products Management System"
                         FontSize="20"
                         FontWeight="Bold"
                         Foreground="#111827"
                         />
                </StackPanel>
            </StackPanel>

            <!-- User Info and Logout -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,16,0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" 
                         FontSize="16" 
                         Margin="0,0,8,0"
                         VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" 
                         FontWeight="Medium"
                         FontSize="14"
                         Foreground="#1F2937" 
                         VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Replace your current logout button with this one -->
                <Button x:Name="btnLogout" 
                    Style="{StaticResource LogoutButtonStyle}" 
                    Click="btnLogout_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛫 Logout" Padding="5"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Navigation -->
        <Border Grid.Row="1" 
            Background="White"
            Margin="24,0,24,16"
            Height="64">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnViewStockWindow" Grid.Column="0" Content="📦 View Stock" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnViewStockWindow_Click"/>
                <Button x:Name="btnCreateOrderWindow" Grid.Column="1" Content="🛒 Create Order" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnCreateOrderWindow_Click"/>
                <Button x:Name="btnOrderHistoryWindow" Grid.Column="2" Content="📅 Order History" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnOrderHistoryWindow_Click"/>
                <Button x:Name="btnAccountsWindow" Grid.Column="3" Content="👥 Accounts" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="4" Content="🏷️ Categories" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#F3F4F6" Foreground="#4F46E5"/>
                <Button x:Name="btnProductsWindow" Grid.Column="5" Content="🌾 Products" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button x:Name="btnStockManagementWindow" Grid.Column="6" Content="📋 Stock Management" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnStockManagementWindow_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Category Management"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#111827"/>
                    <TextBlock Text="Manage product categories"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <!-- Search Box -->
                <Grid Grid.Column="1" Margin="20,0,0,0">
                    <Border Background="White" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Width="951" 
                        Height="40">
                        <Grid>
                            <!-- Search Icon -->
                            <TextBlock Text="🔍" 
                                   FontSize="16" 
                                   Foreground="#9CA3AF" 
                                   Margin="16,0,0,0" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"/>

                            <TextBox x:Name="txtSearch" 
                                 Margin="40,0,0,0"
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 Foreground="#374151"
                                 VerticalAlignment="Center"
                                 Height="28" 
                                 Width="900">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="{TemplateBinding Background}"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             VerticalContentAlignment="Center"
                                                             BorderThickness="0"/>
                                                        <TextBlock Text="Search by name, id, category, or description..." 
                                                               Foreground="#9CA3AF" 
                                                               IsHitTestVisible="False"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Search Button -->
                <Button x:Name="btnSearch" 
                    Grid.Column="2"
                    Content="🔍 Search"
                    Style="{StaticResource NavButton}"
                    Background="#007BFF"
                    Foreground="White"
                    Margin="10,0,0,0"
                    Padding="20,10"
                    VerticalAlignment="Center"
                    Click="btnSearch_Click">
                    <Button.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButton}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0056B3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <!-- Then replace your existing DataGrid with this one -->
            <Border Grid.Row="2"
                Background="White"
                Margin="20"
                CornerRadius="8"
                BorderBrush="#DEE2E6"
                BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#000000"
                      Opacity="0.1"
                      ShadowDepth="2"
                      BlurRadius="8"/>
                </Border.Effect>

                <DataGrid x:Name="dtgStock"
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False"
                      Loaded="dtgStock_Loaded"
                      Margin="0"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#DEE2E6">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource EvenlySpacedColumnHeader}"/>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <!-- Product ID Column - Made Smaller -->
                        <DataGridTextColumn Header="Product ID"
                      Binding="{Binding ProductId}"
                      Width="0.7*" 
                      IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Product Name Column - Make it slightly smaller -->
                        <DataGridTextColumn Header="Product Name"
                      Binding="{Binding ProductName}"
                      Width="1.5*" 
                      IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Current Stock Column -->
                        <DataGridTextColumn Header="Current Stock"
                      Binding="{Binding Quantity}"
                      Width="1*"
                      IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="16"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Status Column -->
                        <DataGridTemplateColumn Header="Status" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StatusPill}">
                                                <Style.Triggers>
                                                    <!-- Out of Stock -->
                                                    <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                        <Setter Property="BorderBrush" Value="#FCA5A5"/>
                                                    </DataTrigger>
                                                    <!-- Low Stock -->
                                                    <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                        <Setter Property="BorderBrush" Value="#FCD34D"/>
                                                    </DataTrigger>
                                                    <!-- In Stock (default state) -->
                                                    <DataTrigger Binding="{Binding Status}" Value="In Stock">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                        <Setter Property="BorderBrush" Value="#81C784"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="12"
                                              FontWeight="SemiBold"
                                              TextAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="In Stock"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                    <Style.Triggers>
                                                        <!-- Out of Stock -->
                                                        <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                            <Setter Property="Text" Value="Out of Stock"/>
                                                            <Setter Property="Foreground" Value="#DC2626"/>
                                                        </DataTrigger>
                                                        <!-- Low Stock -->
                                                        <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                            <Setter Property="Text" Value="Low Stock"/>
                                                            <Setter Property="Foreground" Value="#B45309"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Last Updated Column -->
                        <DataGridTextColumn Header="Last Updated"
                      Binding="{Binding LastUpdated, StringFormat='{}{0:yyyy-MM-dd}'}"
                      Width="1*" 
                      IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Notes Column - Make it larger with the extra space -->
                        <DataGridTextColumn Header="Notes"
                      Binding="{Binding Notes}"
                      Width="2*" 
                      IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Margin" Value="12,0"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Actions Column - Make it slightly smaller -->
                        <DataGridTemplateColumn Header="Actions" Width="0.8*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource UpdateStockButton}"
                                        Click="UpdateStock_Click"
                                        Margin="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔄" Margin="5,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Update" Padding="5" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
