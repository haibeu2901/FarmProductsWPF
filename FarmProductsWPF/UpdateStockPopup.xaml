<Window x:Class="FarmProductsWPF.UpdateStockPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Update Stock Level" Height="400" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Button styles -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UpdateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="10" Background="White" BorderThickness="1" BorderBrush="#DDDDDD">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header with close button -->
            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Update Stock Level" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Button x:Name="btnClose" Grid.Column="1" Content="✕" FontSize="14" Background="Transparent" BorderThickness="0" Click="CloseButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5,0"/>
            </Grid>

            <!-- Subheader -->
            <TextBlock x:Name="txtSubheader" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="Update stock inventory for 'Your Product Name'" 
                       Margin="0,0,0,20" 
                       Foreground="#666666"/>

            <!-- Product Information -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Product:" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,5,10,10"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                <TextBlock x:Name="txtProductName" Text="Free-Range Eggs" FontWeight="Medium"/>
                <TextBlock x:Name="txtProductId" Text="ID: 2" Foreground="#666666" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Current Stock -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Current Stock:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,15"/>
            <TextBlock x:Name="txtStockLevel" Grid.Row="3" Grid.Column="1" Text="40 dozen" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Added Stock Level (Changed from New Stock Level) -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Added Stock Level:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,15"/>
            <TextBox Grid.Row="4" Grid.Column="1" 
                     Name="txtAddedStock"
                     Padding="10"
                     BorderThickness="1" 
                     BorderBrush="#DDDDDD"
                     Height="40" 
                     Margin="0,0,0,15"/>

            <!-- Notes (Changed from Reason ComboBox) -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Notes (Optional):" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,5,10,10"/>
            <TextBox Grid.Row="5" Grid.Column="1" 
                     Name="txtNotes"
                     Padding="10"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="80"
                     BorderThickness="1" 
                     BorderBrush="#DDDDDD"
                     Margin="0,0,0,15"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="40" Margin="0,0,12,0" 
                        Style="{StaticResource CancelButtonStyle}" Click="CancelButton_Click"/>
                <Button x:Name="btnUpdateStock" Content="Update Stock" Width="120" Height="40" 
                        Style="{StaticResource UpdateButtonStyle}" Click="UpdateStockButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
