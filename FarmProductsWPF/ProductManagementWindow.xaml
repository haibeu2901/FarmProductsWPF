<Window x:Class="FarmProductsWPF.ProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Farm Products Management System" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">
    <Window.Resources>
        <!-- Add these colors to your Window.Resources -->
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="8"
                    Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- In Window.Resources, update the SearchBox style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="40,0,12,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="8"
            Height="{TemplateBinding Height}">
                            <Grid>
                                <TextBlock Text="🔍" 
                     Margin="12,0,0,0"
                     VerticalAlignment="Center"
                     Foreground="#9CA3AF"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                        Margin="{TemplateBinding Padding}"
                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Pill Style -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Replace your current LogoutButton style with this one -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clean Category DataGrid style matching the image -->
        <Style x:Key="CategoryDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="60"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
            <Style.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Padding" Value="16,0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type ScrollViewer}">
                    <Setter Property="CanContentScroll" Value="False"/>
                    <Setter Property="PanningMode" Value="VerticalOnly"/>
                    <Setter Property="PanningRatio" Value="1"/>
                    <Setter Property="PanningDeceleration" Value="0.003"/>
                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                </Style>
            </Style.Resources>
        </Style>

        <!-- Green Category column header style - updated with center alignment -->
        <Style x:Key="CategoryColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#5a6268"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Add Category Button Style -->
        <Style x:Key="AddCategoryButton" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action button style -->
        <Style x:Key="ActionIconButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search Button Style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Product DataGrid style matching the image -->
        <Style x:Key="ProductDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E5E7EB"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="50"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
            <Style.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Padding" Value="16,0"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource Self}, Path=Foreground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type ScrollViewer}">
                    <Setter Property="CanContentScroll" Value="False"/>
                    <Setter Property="PanningMode" Value="VerticalOnly"/>
                    <Setter Property="PanningRatio" Value="1"/>
                    <Setter Property="PanningDeceleration" Value="0.003"/>
                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                </Style>
            </Style.Resources>
        </Style>

        <!-- Updated Product column header style with green background -->
        <Style x:Key="ProductColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#5a6268"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Category Pill Style -->
        <Style x:Key="CategoryPillStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Stock Pill Style -->
        <Style x:Key="StockPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- Default is green (In Stock) -->
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="#7C3AED" CornerRadius="12" Width="48" Height="48">
                    <TextBlock Text="⚙️" 
                     FontSize="24" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center"/>
                </Border>
                <StackPanel Margin="16,8,16,8">
                    <TextBlock Text="Farm Products Management System"
                     FontSize="20"
                     FontWeight="Bold"
                     Foreground="#111827"
                     />
                </StackPanel>
            </StackPanel>

            <!-- User Info and Logout -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,16,0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" 
                     FontSize="16" 
                     Margin="0,0,8,0"
                     VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" 
                     FontWeight="Medium"
                     FontSize="14"
                     Foreground="#1F2937" 
                     VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Replace your current logout button with this one -->
                <Button x:Name="btnLogout" 
                Style="{StaticResource LogoutButtonStyle}" 
                Click="btnLogout_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛫 Logout" Padding="5"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Navigation -->
        <Border Grid.Row="1" 
        Background="White"
        Margin="24,0,24,16"
        Height="64">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnViewStockWindow" Grid.Column="0" Content="📦 View Stock" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnViewStockWindow_Click"/>
                <Button x:Name="btnCreateOrderWindow" Grid.Column="1" Content="🛒 Create Order" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnCreateOrderWindow_Click"/>
                <Button x:Name="btnOrderHistoryWindow" Grid.Column="2" Content="📅 Order History" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnOrderHistoryWindow_Click"/>
                <Button x:Name="btnAccountsWindow" Grid.Column="3" Content="👥 Accounts" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button x:Name="btnCategoriesWindow" Grid.Column="4" Content="🏷️ Categories" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnCategoriesWindow_Click"/>
                <Button Grid.Column="5" Content="🌾 Products" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#F3F4F6" Foreground="#4F46E5"/>
                <Button x:Name="btnStockManagementWindow" Grid.Column="6" Content="📋 Stock Management" Style="{StaticResource NavButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnStockManagementWindow_Click"/>
            </Grid>
        </Border>

        <!-- Main Content - Product Management Section -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Title and Add Product Button -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Product Management"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#111827"/>
                    <TextBlock Text="Manage all farm products"
                           FontSize="14"
                           Foreground="#6B7280"
                           Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Add Product Button -->
                <Button x:Name="btnAddProduct" 
                    Grid.Column="1"
                    Style="{StaticResource AddCategoryButton}"
                    Click="btnAddProduct_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕" 
                      FontSize="16" 
                      FontWeight="Bold" 
                      Margin="0,0,8,0"
                      VerticalAlignment="Center"/>
                        <TextBlock Text="Add Product" 
                      VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Search Bar Section -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Background="White" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Height="40">
                    <Grid>
                        <!-- Search Icon -->
                        <TextBlock Text="🔍" 
                             FontSize="16" 
                             Foreground="#9CA3AF" 
                             Margin="16,0,0,0" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Left"/>

                        <TextBox x:Name="txtSearch" 
                           Margin="40,0,0,0"
                           Background="Transparent" 
                           BorderThickness="0"
                           Foreground="#374151"
                           VerticalAlignment="Center"
                           Height="28">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="{TemplateBinding Background}"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     VerticalContentAlignment="Center"
                                                     BorderThickness="0"/>
                                                    <TextBlock Text="Search products..." 
                                                       Foreground="#9CA3AF" 
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Search Button -->
                <Button x:Name="btnSearch" 
                        Grid.Column="1"
                        Style="{StaticResource SearchButtonStyle}"
                        Margin="10,0,0,0"
                        Click="btnSearch_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍 Search" 
                             Foreground="White"
                             FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Product DataGrid -->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <DataGrid x:Name="dtgProducts"
                          d:ItemsSource="{d:SampleData ItemCount=5}"
                          Style="{StaticResource ProductDataGrid}"
                          AutoGenerateColumns="False"
                          Margin="0"
                          BorderThickness="0"
                          ColumnHeaderStyle="{StaticResource ProductColumnHeader}"
                          HorizontalScrollBarVisibility="Disabled"
                          Loaded="dtgProducts_Loaded">
                    <DataGrid.Columns>
                        <!-- ID Column - Smaller width -->
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding ProductId}"
                                            Width="100"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Product Name Column - Increased width for more space -->
                        <DataGridTextColumn Header="Product Name"
                                            Binding="{Binding ProductName}"
                                            Width="350"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Replace the Category Column with this pill version -->
<DataGridTemplateColumn Header="Category" 
                        Width="300"
                        IsReadOnly="True">
    <DataGridTemplateColumn.CellTemplate>
        <DataTemplate>
            <Border Style="{StaticResource CategoryPillStyle}">
                <TextBlock Text="{Binding CategoryName}"
                           Foreground="#2E7D32"
                           FontSize="12"
                           FontWeight="SemiBold"
                           TextAlignment="Center"/>
            </Border>
        </DataTemplate>
    </DataGridTemplateColumn.CellTemplate>
</DataGridTemplateColumn>

                        <!-- Unit Column - Smaller width -->
                        <DataGridTextColumn Header="Unit"
                                            Binding="{Binding Unit}"
                                            Width="120"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Price Column - Smaller width -->
                        <DataGridTextColumn Header="Price"
                                            Binding="{Binding SellingPrice, StringFormat='{}{0:#,##0}₫'}"
                                            Width="150"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#28A745"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Stock Column using Status property -->
                        <DataGridTemplateColumn Header="Stock" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Border.Style>
                                            <Style TargetType="Border" BasedOn="{StaticResource StockPill}">
                                                <Style.Triggers>
                                                    <!-- Out of Stock -->
                                                    <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                        <Setter Property="BorderBrush" Value="#FCA5A5"/>
                                                    </DataTrigger>
                                                    <!-- Low Stock -->
                                                    <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                        <Setter Property="BorderBrush" Value="#FCD34D"/>
                                                    </DataTrigger>
                                                    <!-- In Stock (default state) -->
                                                    <DataTrigger Binding="{Binding Status}" Value="In Stock">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                        <Setter Property="BorderBrush" Value="#81C784"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding QuantityInStock}" 
                                                   FontWeight="SemiBold"
                                                   TextAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                    <Style.Triggers>
                                                        <!-- Out of Stock -->
                                                        <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                            <Setter Property="Foreground" Value="#DC2626"/>
                                                        </DataTrigger>
                                                        <!-- Low Stock -->
                                                        <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                            <Setter Property="Foreground" Value="#B45309"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions Column - Keeping consistent size -->
                        <DataGridTemplateColumn Header="Actions" Width="1*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button x:Name="btnEdit" 
                                                        Style="{StaticResource ActionIconButton}"
                                                        Margin="0,0,8,0"
                                                        Click="btnEdit_Click">
                                            <TextBlock Text="🖋" FontSize="14"/>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button x:Name="btnDelete" 
                                                Style="{StaticResource ActionIconButton}"
                                                Click="btnDelete_Click">
                                            <TextBlock Text="🗑️" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
