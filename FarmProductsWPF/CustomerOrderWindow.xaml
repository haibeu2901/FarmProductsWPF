<Window x:Class="FarmProductsWPF.CustomerOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Personal Orders - Track your personal farm product orders"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="LightGreen" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="ProcessingOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ShippedBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BackgroundWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SearchBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SearchBlueHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>

        <!-- Add a converter for null to visibility conversion -->

        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{StaticResource BackgroundWhite}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Cursor="Hand">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource LightGreen}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="TextElement.Foreground" Value="White"/>
            <Setter Property="TextElement.FontSize" Value="12"/>
            <Setter Property="TextElement.FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="CategoryBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="TextElement.FontSize" Value="10"/>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SearchBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SearchBlueHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource BackgroundWhite}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource BackgroundWhite}"
                BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryGreen}" CornerRadius="8"
                            Width="40" Height="40" Margin="0,0,15,0">
                        <TextBlock Text="📦" FontSize="20" HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Personal Orders" FontSize="24" FontWeight="Bold"
                                   Foreground="#1F2937"/>
                        <TextBlock Text="Track your personal farm product orders" FontSize="14"
                                   Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="16" Margin="0,0,5,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" FontWeight="Medium"
                               Foreground="#1F2937" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <!-- Search button -->


                    <!-- Logout button -->
                    <Button x:Name="btnLogout" Style="{StaticResource LogoutButtonStyle}" 
                            Command="{Binding LogoutCommand}" Click="btnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🚪 Logout" Padding="5"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                    CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Order History" FontSize="20" FontWeight="Bold"
                                   Foreground="#1F2937"/>
                        <TextBlock Text="View and track all your orders" FontSize="14"
                                   Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtSearch" Grid.Column="1" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="{StaticResource TextGray}"
                                     VerticalAlignment="Center" Height="28">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="{TemplateBinding Background}"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 BorderThickness="0"/>
                                                        <TextBlock Text="Search orders..." 
                                                                   Foreground="#9CA3AF" 
                                                                   IsHitTestVisible="False"
                                                                   Margin="2,0,0,0"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Text, ElementName=textBox}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="btnSearch" Grid.Column="2" Margin="8,0,0,0"
                                    Command="{Binding SearchCommand}"
                                    Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍 Search" FontSize="14" Padding="5"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <ListBox x:Name="dtgOrders" Grid.Row="2"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             Background="Transparent"
                             Loaded="dtgOrders_Loaded" SelectionChanged="dtgOrders_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{StaticResource BackgroundWhite}"
                                                    BorderBrush="{StaticResource BorderGray}"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                <ContentPresenter Margin="16"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1.5"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource LightGreen}"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <!-- Header Row -->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Order ID and Amount -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding OrderId, StringFormat='Order #{0}'}"
                                                 FontSize="16" 
                                                 FontWeight="Bold"
                                                 Foreground="#1F2937"/>
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding TotalAmount, StringFormat='{}{0:N0} VND'}"
                                                 FontSize="16"
                                                 FontWeight="Bold"
                                                 Foreground="{StaticResource PrimaryGreen}"/>
                                    </Grid>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="1"
                                             Text="{Binding OrderDate, StringFormat='{}{0:MMM dd, yyyy, hh:mm tt}'}"
                                             Foreground="{StaticResource TextGray}"
                                             Margin="0,8,0,0"/>

                                    <!-- Staff and Items -->
                                    <Grid Grid.Row="2" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                 Text="{Binding StaffName, StringFormat='Processed by: {0}'}"
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                                                 Foreground="{StaticResource TextGray}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                    CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Order Details" FontSize="20" FontWeight="Bold"
                                   Foreground="#1F2937" Margin="0,0,0,15"/>

                        <Border>
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Order ID:" FontWeight="Medium"
                                           Foreground="#1F2937" Margin="0,0,20,8"/>
                                <TextBlock x:Name="txtOrderId" Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.OrderId}"
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Order Date:" FontWeight="Medium"
                                           Foreground="#1F2937" Margin="0,0,20,8"/>
                                <TextBlock x:Name="txtOrderDate" Grid.Row="2" Grid.Column="1" Text="{Binding SelectedOrder.OrderDate, StringFormat='{}{0:MMM dd, yyyy, hh:mm tt}'}"
                                           Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Processed by:" FontWeight="Medium"
                                           Foreground="#1F2937" Margin="0,0,20,0"/>
                                <TextBlock x:Name="txtStaffName" Grid.Row="3" Grid.Column="1" Text="{Binding SelectedOrder.StaffName}"
                                           Foreground="{StaticResource TextGray}"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="Items Ordered" FontSize="16"
                                   FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,15"/>

                        <ListBox x:Name="dtgOrderDetail" ItemsSource="{Binding SelectedOrder.Items}"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled" BorderThickness="0" Background="Transparent" Loaded="dtgOrderDetail_Loaded">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" BorderBrush="{StaticResource BorderGray}"
                                            BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}"
                                                       FontWeight="Medium" Foreground="#1F2937"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Price, StringFormat='{}{0:C}'}"
                                                       FontWeight="Bold" Foreground="#1F2937"/>

                                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal"
                                                        Margin="0,5,0,0">
                                                <Border>
                                                    <Border.Style>
                                                        <Style TargetType="Border" BasedOn="{StaticResource CategoryBadgeStyle}">
                                                            <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                                                            <Setter Property="TextElement.Foreground" Value="{StaticResource PrimaryGreen}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Category}" Value="Dairy &amp; Eggs">
                                                                    <Setter Property="Background" Value="#DBEAFE"/>
                                                                    <Setter Property="TextElement.Foreground" Value="{StaticResource ShippedBlue}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Pantry">
                                                                    <Setter Property="Background" Value="#FEF3C7"/>
                                                                    <Setter Property="TextElement.Foreground" Value="{StaticResource ProcessingOrange}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Category}"/>
                                                </Border>
                                                <TextBlock FontSize="12" Foreground="{StaticResource TextGray}"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding Quantity}"/>
                                                    <Run Text=" × "/>
                                                    <Run Text="{Binding UnitPrice, StringFormat='{}{0:C}'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Border Background="{StaticResource LightGreen}"
                                BorderBrush="{StaticResource PrimaryGreen}" BorderThickness="1"
                                CornerRadius="8" Padding="15" Margin="0,15,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Total Amount:" FontSize="16"
                                           FontWeight="Bold" Foreground="#1F2937"/>
                                <TextBlock x:Name="txtTotalAmount" Grid.Column="1" Text="{Binding SelectedOrder.TotalAmount, StringFormat='{}{0:N0} VND'}"
                                           FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryGreen}"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="Account Information" FontSize="16" FontWeight="Bold"
                                   Foreground="#1F2937" Margin="0,30,0,15"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="Medium"
                                       Foreground="#1F2937" Margin="0,0,15,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentUser.FullName}"
                                       Foreground="{StaticResource TextGray}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" FontWeight="Medium"
                                       Foreground="#1F2937" Margin="0,0,15,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentUser.Email}"
                                       Foreground="{StaticResource TextGray}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone:" FontWeight="Medium"
                                       Foreground="#1F2937" Margin="0,0,15,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentUser.PhoneNumber}"
                                       Foreground="{StaticResource TextGray}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Address:" FontWeight="Medium"
                                       Foreground="#1F2937" Margin="0,0,15,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentUser.Address}"
                                       Foreground="{StaticResource TextGray}" TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>