<Window x:Class="FarmProductsWPF.CustomerOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF"
        mc:Ignorable="d"
        Title="Personal Orders - Track your personal farm product orders"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#22C55E"/>
        <SolidColorBrush x:Key="LightGreen" Color="#DCFCE7"/>
        <SolidColorBrush x:Key="ProcessingOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ShippedBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BackgroundWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SearchBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SearchBlueHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="LogoutRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="LogoutRedHover" Color="#DC2626"/>

        <!-- Add a converter for null to visibility conversion -->

        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource LogoutRed}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LogoutRedHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{StaticResource BackgroundWhite}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Cursor="Hand">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource LightGreen}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="TextElement.Foreground" Value="White"/>
            <Setter Property="TextElement.FontSize" Value="12"/>
            <Setter Property="TextElement.FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="CategoryBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="TextElement.FontSize" Value="10"/>
        </Style>

        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SearchBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SearchBlueHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Grid.ColumnSpan="2">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="📅" 
                                                               FontSize="16"
                                                               Margin="15,0,0,0"
                                                               VerticalAlignment="Center"
                                                               Foreground="#9CA3AF"/>
                                                    <Path Grid.Column="1"
                                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                                          Fill="#9CA3AF"
                                                          Margin="0,0,15,0"
                                                          VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="40,0,30,0"
                                                  VerticalAlignment="Center"/>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="White"
                                            BorderBrush="{StaticResource BorderGray}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            MinWidth="{TemplateBinding ActualWidth}"
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource BackgroundWhite}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource BackgroundWhite}"
                BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryGreen}" CornerRadius="8"
                            Width="40" Height="40" Margin="0,0,15,0">
                        <TextBlock Text="📦" FontSize="20" HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Personal Orders" FontSize="24" FontWeight="Bold"
                                   Foreground="#1F2937"/>
                        <TextBlock Text="Track your personal farm product orders" FontSize="14"
                                   Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤" FontSize="16" Margin="0,0,5,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" FontWeight="Medium"
                               Foreground="#1F2937" VerticalAlignment="Center" Margin="0,0,15,0"/>
                   
                    <!-- Logout button -->
                    <Button x:Name="btnLogout" Style="{StaticResource LogoutButtonStyle}" 
                            Command="{Binding LogoutCommand}" Click="btnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛫 Logout" Padding="5"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                    CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Order History" FontSize="20" FontWeight="Bold"
                                   Foreground="#1F2937"/>
                        <TextBlock Text="View and track all your orders" FontSize="14"
                                   Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#F9FAFB" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" 
                                       FontSize="16" 
                                       Margin="10,0,0,0" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="#9CA3AF"/>
                            <TextBox x:Name="txtSearch" 
                                     Grid.Column="1" 
                                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     Foreground="{StaticResource TextGray}"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Height="28" Width="314">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="{TemplateBinding Background}"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 VerticalContentAlignment="Center"
                                                                 BorderThickness="0"/>
                                                        <TextBlock Text="Search orders..." 
                                                                   Foreground="#9CA3AF" 
                                                                   IsHitTestVisible="False"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Center" Width="254">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="btnSearch" Grid.Column="2" Margin="8,0,0,0"
                                    Command="{Binding SearchCommand}"
                                    Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍 Search" FontSize="14" Padding="5"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Filter Section -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="cmbDateFilter" 
                                  Grid.Column="0"
                                  Style="{StaticResource FilterComboBoxStyle}"
                                  SelectedIndex="0"
                                  Margin="0,0,20,0">
                            <ComboBoxItem Content="All Orders"/>
                            <ComboBoxItem Content="Today"/>
                            <ComboBoxItem Content="This Week"/>
                            <ComboBoxItem Content="This Month"/>
                        </ComboBox>

                        <Button x:Name="btnFilter" 
                                Grid.Column="1"
                                Style="{StaticResource SearchButtonStyle}"
                                Click="btnFilter_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅 Filter" 
                                           FontSize="14"
                                           Padding="5" 
                                           Width="80"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ListBox x:Name="dtgOrders" Grid.Row="3"
                             d:ItemsSource="{d:SampleData ItemCount=5}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             Background="Transparent"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             VirtualizingPanel.ScrollUnit="Pixel"
                             Loaded="dtgOrders_Loaded" SelectionChanged="dtgOrders_SelectionChanged">
                        <ListBox.Template>
                            <ControlTemplate TargetType="ListBox">
                                <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        Background="{TemplateBinding Background}">
                                    <ScrollViewer Padding="{TemplateBinding Padding}"
                                                  CanContentScroll="False"
                                                  PanningMode="VerticalOnly"
                                                  PanningRatio="0.001"
                                                  PanningDeceleration="0.000001">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </ControlTemplate>
                        </ListBox.Template>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="{StaticResource BackgroundWhite}"
                                                    BorderBrush="{StaticResource BorderGray}"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                <ContentPresenter Margin="16"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                                    <Setter TargetName="Border" Property="BorderThickness" Value="1.5"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource LightGreen}"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryGreen}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <!-- Header Row -->
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Order ID and Amount -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding OrderId, StringFormat='Order #{0}'}"
                                                 FontSize="16" 
                                                 FontWeight="Bold"
                                                 Foreground="#1F2937"/>
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding TotalAmount, StringFormat='{}{0:N0} đ'}"
                                                 FontSize="16"
                                                 FontWeight="Bold"
                                                 Foreground="{StaticResource PrimaryGreen}"/>
                                    </Grid>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="1"
                                             Text="{Binding OrderDate, StringFormat='{}{0:MMM dd, yyyy, hh:mm tt}'}"
                                             Foreground="{StaticResource TextGray}"
                                             Margin="0,8,0,0"/>

                                    <!-- Staff and Items -->
                                    <Grid Grid.Row="2" Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                 Text="{Binding StaffName, StringFormat='Processed by: {0}'}"
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Grid.Column="1"
                                                 Text="{Binding TotalItems, StringFormat='{}{0} items'}"
                                                 Foreground="{StaticResource TextGray}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                    CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock Text="Order Details" FontSize="20" FontWeight="Bold"
                                       Foreground="#1F2937" Margin="0,0,0,15"/>

                            <Border>
                                <Grid Margin="0,0,0,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Order ID:" FontWeight="Medium"
                                               Foreground="#1F2937" Margin="0,0,20,8"/>
                                    <TextBlock x:Name="txtOrderId" Grid.Row="0" Grid.Column="1" Text="{Binding SelectedOrder.OrderId}"
                                               Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Order Date:" FontWeight="Medium"
                                               Foreground="#1F2937" Margin="0,0,20,8"/>
                                    <TextBlock x:Name="txtOrderDate" Grid.Row="2" Grid.Column="1" Text="{Binding SelectedOrder.OrderDate, StringFormat='{}{0:MMM dd, yyyy, hh:mm tt}'}"
                                               Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Processed by:" FontWeight="Medium"
                                               Foreground="#1F2937" Margin="0,0,20,0"/>
                                    <TextBlock x:Name="txtStaffName" Grid.Row="3" Grid.Column="1" Text="{Binding SelectedOrder.StaffName}"
                                               Foreground="{StaticResource TextGray}"/>
                                </Grid>
                            </Border>

                            <TextBlock Text="Items Ordered" FontSize="16"
                                       FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,15"/>

                            <!-- ListBox goes here -->
                            <ListBox x:Name="dtgOrderDetail" Height="280"
                                     d:ItemsSource="{d:SampleData ItemCount=5}"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     SelectionMode="Single"
                                     IsHitTestVisible="True"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     VirtualizingPanel.ScrollUnit="Pixel"
                                     ItemsSource="{Binding SelectedOrder.OrderDetails}">
                                <ListBox.Template>
                                    <ControlTemplate TargetType="ListBox">
                                        <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                Background="{TemplateBinding Background}">
                                            <ScrollViewer Padding="{TemplateBinding Padding}"
                                                          CanContentScroll="False"
                                                          PanningMode="VerticalOnly"
                                                          PanningRatio="0.001"
                                                          PanningDeceleration="0.000001">
                                                <ItemsPresenter/>
                                            </ScrollViewer>
                                        </Border>
                                    </ControlTemplate>
                                </ListBox.Template>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource OrderItemContainerStyle}">
                                        <Setter Property="IsHitTestVisible" Value="False"/>
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Margin" Value="0,0,0,12"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Name and Total Price -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding ProductName}"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       Foreground="#1F2937"/>

                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding SellingPrice, StringFormat='{}{0:N0} đ'}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#1F2937"/>

                                            <!-- Category, Quantity and Unit Price on same line -->
                                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Category Badge -->
                                                <Border Grid.Column="0"
                                                        Style="{StaticResource CategoryBadgeStyle}"
                                                        Background="#E8F5E9"
                                                        BorderBrush="#81C784"
                                                        BorderThickness="1"
                                                        CornerRadius="12"
                                                        Padding="8,4"
                                                        Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding CategoryName}"
                                                               Foreground="#2E7D32"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"/>
                                                </Border>

                                                <!-- Quantity and Unit Price - aligned with category -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Quantity}"
                                                               Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="{Binding Unit}"
                                                               Foreground="{StaticResource TextGray}"
                                                               Margin="3,0,0,0"/>
                                                    <TextBlock Text=" × "
                                                               Foreground="{StaticResource TextGray}"
                                                               Margin="3,0,3,0"/>
                                                    <TextBlock Text="{Binding UnitPrice, StringFormat='{}{0:N0} đ'}"
                                                               Foreground="{StaticResource TextGray}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Total Amount moved to bottom -->
                    <Border Grid.Row="1" Background="{StaticResource LightGreen}"
                            BorderBrush="{StaticResource PrimaryGreen}" BorderThickness="1"
                            CornerRadius="8" Padding="15" Margin="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total Amount:" FontSize="16"
                                       FontWeight="Bold" Foreground="#1F2937"/>
                            <TextBlock x:Name="txtTotalAmount" Grid.Column="1" 
