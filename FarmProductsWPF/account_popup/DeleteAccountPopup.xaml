<Window x:Class="FarmProductsWPF.account_popup.DeleteAccountPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmProductsWPF.account_popup"
        mc:Ignorable="d"
        Title="Delete Account"
        Height="665"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Button styles -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Pill Style -->
        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!-- Default is green (Active) -->
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#81C784"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1" 
            CornerRadius="8" 
            Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Area with ScrollViewer -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with close button -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Column="0"
                                   Text="Delete Account"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#111827"/>

                        <!-- Close button -->
                        <Button Grid.Column="1"
                                x:Name="btnClose"
                                Content="✕"
                                FontSize="14"
                                Width="24"
                                Height="24"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnClose_Click"/>
                    </Grid>

                    <!-- Confirmation Message -->
                    <TextBlock Grid.Row="1"
                               x:Name="txtConfirmation"
                               Text="Are you sure you want to delete &quot;Sarah Johnson&quot;?"
                               FontSize="14"
                               Foreground="#6B7280"
                               Margin="0,4,0,24"/>

                    <!-- Account Information Panel -->
                    <Border Grid.Row="2"
                            BorderBrush="#FDE4E3"
                            BorderThickness="1"
                            CornerRadius="6"
                            Background="#FEF2F2"
                            Padding="16"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <!-- Added this missing row definition for Status -->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Account Label -->
                            <TextBlock Grid.Row="0"
                                     Grid.Column="0"
                                     Text="Account:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Account Value -->
                            <TextBlock Grid.Row="0"
                                     Grid.Column="1"
                                     x:Name="lblAccount"
                                     Text="Sarah Johnson"
                                     FontSize="14"
                                     Foreground="#111827"
                                     Margin="0,0,0,8"/>

                            <!-- Username Label -->
                            <TextBlock Grid.Row="1"
                                     Grid.Column="0"
                                     Text="Username:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Username Value -->
                            <TextBlock Grid.Row="1"
                                     Grid.Column="1"
                                     x:Name="lblUsername"
                                     Text="sarah"
                                     FontSize="14"
                                     Foreground="#111827"
                                     Margin="0,0,0,8"/>

                            <!-- Role Label -->
                            <TextBlock Grid.Row="2"
                                     Grid.Column="0"
                                     Text="Role:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Role Value -->
                            <Border Grid.Row="2"
                                    Grid.Column="1"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    MinWidth="70"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#EEF2FF"/>
                                        <Setter Property="BorderBrush" Value="#FF5911C7"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=lblRole}" Value="Owner">
                                                <Setter Property="Background" Value="#F9E6FF"/>
                                                <Setter Property="BorderBrush" Value="#FFA888F1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=lblRole}" Value="Staff">
                                                <Setter Property="Background" Value="#E6F3FF"/>
                                                <Setter Property="BorderBrush" Value="#2563EB"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, ElementName=lblRole}" Value="Customer">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Setter Property="BorderBrush" Value="#2E7D32"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="lblRole"
                                           Text="Staff"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#FF5911C7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="Owner">
                                                    <Setter Property="Foreground" Value="#FF5911C7"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="Staff">
                                                    <Setter Property="Foreground" Value="#2563EB"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="Customer">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <!-- Email Label -->
                            <TextBlock Grid.Row="3"
                                     Grid.Column="0"
                                     Text="Email:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Email Value -->
                            <TextBlock Grid.Row="3"
                                     Grid.Column="1"
                                     x:Name="lblEmail"
                                     Text="sarah@farm.com"
                                     FontSize="14"
                                     Foreground="#111827"
                                     Margin="0,0,0,8"/>

                            <!-- Address Label -->
                            <TextBlock Grid.Row="4"
                                     Grid.Column="0"
                                     Text="Address:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Address Value -->
                            <TextBlock Grid.Row="4"
                                     Grid.Column="1"
                                     x:Name="lblAddress"
                                     Text="Ho Chi Minh City"
                                     FontSize="14"
                                     Foreground="#111827"
                                     Margin="0,0,0,8"/>

                            <!-- Status Label -->
                            <TextBlock Grid.Row="5"
                                     Grid.Column="0"
                                     Text="Status:"
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,10,8"/>

                            <!-- Status Value -->
                            <Border Grid.Row="5"
                                    Grid.Column="1"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    MinWidth="70"
                                    HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                        <Setter Property="BorderBrush" Value="#81C784"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=lblStatus}" Value="Inactive">
                                                <Setter Property="Background" Value="#FEE2E2"/>
                                                <Setter Property="BorderBrush" Value="#FCA5A5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="lblStatus"
                                           Text="Active"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Self}}" Value="Inactive">
                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Warning Panel -->
                    <Border Grid.Row="3"
                            BorderBrush="#FECDD3"
                            BorderThickness="1"
                            CornerRadius="6"
                            Background="#FFF1F2"
                            Padding="16"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Warning Header with Icon -->
                            <StackPanel Grid.Row="0" 
                                      Orientation="Horizontal" 
                                      Margin="0,0,0,8">
                                <TextBlock Text="⚠️" 
                                         FontSize="16"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="Warning: Account has associated orders"
                                         FontSize="14"
                                         FontWeight="SemiBold"
                                         Foreground="#BE123C"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Order History Details -->
                            <TextBlock Grid.Row="1" 
                                     x:Name="lblOrderWarning"
                                     Text="This account has 3 associated order(s) in the system."
                                     FontSize="14"
                                     Foreground="#BE123C"
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,8"/>

                            <!-- Warning Message -->
                            <TextBlock Grid.Row="2" 
                                     Text="Deleting this account will affect order history. Consider deactivating the account instead."
                                     FontSize="14"
                                     Foreground="#BE123C"
                                     TextWrapping="Wrap"/>
                        </Grid>
                    </Border>

                    <!-- Additional Warning -->
                    <Border Grid.Row="4"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="6"
                            Background="#F9FAFB"
                            Padding="16"
                            Margin="0,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Warning Title -->
                            <TextBlock Grid.Row="0"
                                     Text="This action cannot be undone."
                                     FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="#111827"
                                     Margin="0,0,0,8"/>

                            <!-- Warning Details -->
                            <TextBlock Grid.Row="1" 
                                     Text="The account will be permanently removed from the system. Consider using the 'Deactivate' option instead to preserve data integrity."
                                     FontSize="14"
                                     Foreground="#6B7280"
                                     TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Button Row - Separated from ScrollViewer -->
            <Grid Grid.Row="1" Margin="24,0,24,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Spacer -->
                <Rectangle Grid.Column="0" Fill="Transparent"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        x:Name="btnCancel"
                        Content="Cancel"
                        Style="{StaticResource CancelButtonStyle}"
                        Margin="0,0,12,0"
                        Width="100"
                        Click="btnCancel_Click"/>

                <!-- Delete Account Button -->
                <Button Grid.Column="2"
                        x:Name="btnDeleteAccount"
                        Content="Delete Account"
                        Style="{StaticResource DeleteButtonStyle}"
                        Width="150"
                        Click="btnDeleteAccount_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>